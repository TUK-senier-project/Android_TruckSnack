<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="프로필 사진 업로드"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/image_view"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="130dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/image_id"
                android:text="아이디"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <EditText
                android:id="@+id/seller_id_image"
                style="@style/EditTextHint"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/edit_text_style"
                android:paddingStart="16dp"
                android:hint="아이디를 입력해주세요" />
        </LinearLayout>

        <Button
            android:id="@+id/seller_image_register_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/seller_register_button_style"
            android:text="사진 불러오기"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />
        <Button
            android:id="@+id/seller_image_Upload_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/seller_register_button_style"
            android:text="사진 업로드하기"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>