<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/list_photo_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/linearlayout_line_color">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/foodPicture"
                android:text="음식 사진"
                android:layout_marginTop="30dp"
                android:layout_marginRight="25dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/sellr_food_image_view"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/getMenu"
                android:text="메뉴 이름"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:textSize="16sp"
                android:textColor="@color/black"/>

            <TextView
                android:id="@+id/seller_food_name_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:paddingStart="16dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <!--<TextView
                android:id="@+id/seller_id_text"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/edit_text_style"
                android:paddingStart="16dp"
                android:textColor="#00000000"
                android:textSize="0sp" />-->
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/getPrice"
                android:text="메뉴 가격"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/seller_food_price_text"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="30dp"
                android:textStyle="bold"
                android:paddingStart="16dp" />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>