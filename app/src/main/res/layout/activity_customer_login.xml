<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".customer_login.CustomerLoginActivity"
    android:layout_margin="16dp"
    android:gravity="center">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용자 로그인"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="45dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아이디"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/customer_login_id"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="65dp"
                android:background="@drawable/edit_text_style"
                android:hint="아이디 입력"
                android:paddingStart="16dp"
                style="@style/EditTextHint"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/pw"
                android:text="비밀번호"
                android:textSize="16sp"
                android:layout_marginTop="30dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/customer_login_pw"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/edit_text_style"
                android:hint="비밀번호 입력"
                android:paddingStart="16dp"
                android:layout_marginTop="30dp"
                android:inputType="textPassword"
                style="@style/EditTextHint" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/to_customer_login"
                android:text="회원가입 하러가기"
                android:textSize="13sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_marginLeft="30dp"
                android:gravity="center"/>

            <TextView
                android:id="@+id/id_find_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#000000"
                android:text="아이디 찾기"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginRight="30dp"
                android:textSize="13sp" />
        </LinearLayout>

        <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:background="@drawable/customer_login_button_style"
            android:text="로그인"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="40dp"
            android:textSize="18sp" />





        </LinearLayout>




</LinearLayout>