    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/customer_main_constraint_layout_style"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:gravity="center"
            android:text="경기도 시흥시 산기대학로 237"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="#FFAB0F"
            android:src="@drawable/arrow_down_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="15dp"
            android:scaleType="fitXY"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingBottom="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_weight="8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:src="@drawable/basic_profile"/>
                    <TextView
                        android:id="@+id/customer_main_id_tv"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="난하이볼"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:gravity="right"
                        android:layout_gravity="center"
                        android:layout_marginStart="30dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="님"
                        android:textColor="@color/black"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginStart="10dp"
                        />
                    <View
                        android:layout_weight="2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center">
                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_search"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:scaleType="fitXY"/>
                </LinearLayout>



            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#D2D2D2"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                >
                <LinearLayout
                    android:id="@+id/parent1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/parent_tv"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right"
                        android:src="@drawable/baseline_expand_more_24"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="4dp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/main_imgv1"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_goldfish"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv2"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_chicken_skewers"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv3"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_takoyaki"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv4"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_tteokbokki"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv5"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_steak"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="붕어빵"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="닭꼬치"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="타코야끼"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="떡볶이"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="스테이크"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="5dp">
                        <ImageView
                            android:id="@+id/main_imgv6"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_toast"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv7"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_hamburger"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv8"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_churros"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv9"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_icecream"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv10"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_sushi"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="토스트"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="햄버거"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="츄러스"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="아이스크림"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="초밥"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_expand1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/main_imgv11"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_pizza"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv12"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_chicken"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv13"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@drawable/icon_parfait"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv14"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="invisible"
                            android:padding="4dp"/>
                        <ImageView
                            android:id="@+id/main_imgv15"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="50dp"
                            android:src="@mipmap/ic_launcher"
                            android:visibility="invisible"
                            android:padding="4dp"/>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="피자"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="치킨"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="파르페"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="음식1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:visibility="invisible"/>
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="음식1"
                            android:textSize="13sp"
                            android:textColor="@color/black"
                            android:layout_marginTop="3dp"
                            android:gravity="center"
                            android:visibility="invisible"/>

                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D2D2D2"
                    android:layout_marginBottom="20dp"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/todo_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>