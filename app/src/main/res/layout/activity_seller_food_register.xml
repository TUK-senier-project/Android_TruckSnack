<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="16dp">
        <!-- ToolBar 생성 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/seller_register_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="메뉴관리"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.appcompat.widget.Toolbar>
        <!-- 회색 라인추가 부분 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#D0D0D0"/>
        <!-- ToolBar 생성 끝부분 -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="메뉴 등록하기"
            android:textColor="#000000"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"/>

            <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <!--<TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/foodPicture"
                    android:text="음식 사진"
                    android:layout_marginTop="30dp"
                    android:layout_marginRight="25dp"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>
                <ImageView
                    android:id="@+id/seller_food_image_view2"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical" />-->
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/menu"
                    android:text="메뉴"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="@color/black"/>

                <EditText
                    android:id="@+id/seller_food_name2"
                    style="@style/EditTextHint"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="16dp"
                    android:hint="메뉴 이름 입력" />
            </LinearLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/seller_id"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@drawable/edit_text_style"
                    android:paddingStart="16dp"
                    android:textColor="@color/black"
                    android:textSize="10sp" />
            </LinearLayout>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:id="@+id/price"
                android:text="가격"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/seller_food_price2"
                style="@style/EditTextHint"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/edit_text_style"
                android:paddingStart="16dp"
                android:hint="가격 입력" />
        </LinearLayout>
        <Button
            android:id="@+id/seller_food_image_btn"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/seller_register_button_style"
            android:text="사진 등록하기"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />


        <Button
            android:id="@+id/seller_food_register_btn2"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:background="@drawable/seller_register_button_style"
            android:text="메뉴 등록하기"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="30dp"
            android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>