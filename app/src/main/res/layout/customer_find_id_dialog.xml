<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top|center"
        android:orientation="vertical"
        android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디 찾기"
        android:textColor="#000000"
        android:textSize="23sp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findName"
            android:text="이름"
            android:textSize="16sp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/customer_find_name"
            style="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="80dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="16dp"
            android:hint="이름 입력" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/findPhone"
            android:text="전화번호"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/customer_find_phone"
            style="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="16dp"
            android:hint="전화번호 입력" />
    </LinearLayout>

        <EditText
            android:id="@+id/customer_id_found"
            style="@style/EditTextHint"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_text_style"
            android:paddingStart="16dp"
            android:hint="찾은 아이디가 입력됩니다" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message"
            android:text="아이디를 찾으시면 위에 아이디가 입력됩니다"
            android:textSize="11sp"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textColor="@color/black" />

    <Button
        android:id="@+id/id_find_Dialog_Button"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="@drawable/customer_login_button_style"
        android:text="아이디 찾기"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_marginTop="30dp"
        android:textSize="18sp" />


    </LinearLayout>

</LinearLayout>